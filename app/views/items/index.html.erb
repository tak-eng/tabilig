<div class="items-sell-main">
  <h2 class="items-sell-title">持ち物と個数を入力</h2>
  <ul class="todo js-addTask-target"></ul>
  <%= form_with model: @item, local: true do |f| %>
    <div class="img-upload">
      <div class="click-upload">
          <%= f.text_field :name, class:"js-addTask-value", placeholder:"(例)パスポート" %>
          <%= f.number_field :number, class:"js-addTask-value", placeholder:"個数" , style:"width:50px"%>
          <button class="js-addTask-trigger" type="button">次へ</button>
      </div>
    </div>
    
    <div class="＃">
      <%= f.submit "登録する" ,class:"＃" %>
      <%=link_to 'もどる', root_path, class:"#" %>
    </div>
  <% end %> 
</div>